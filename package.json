{
  "name": "bifrost-react-form",
  "version": "0.1.0",
  "description": "Higher Order Component Form And Field Components",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:module && npm run build:browser && npm run build:browser-cjs",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p config/exports/tsconfig.module.json",
    "build:browser": "rollup -c config/exports/rollup.config.js -f es -o build/browser/index.js",
    "build:browser-cjs": "rollup -c config/exports/rollup.config.js -f cjs -o build/browser/index.cjs.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daniel-reed/bifrost-react-form.git"
  },
  "author": "Daniel Reed <daniereedme@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daniel-reed/bifrost-react-form/issues"
  },
  "homepage": "https://github.com/daniel-reed/bifrost-react-form#readme",
  "jest": {
    "moduleFileExtensions": [
      "tx",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.(js|ts)?(x)",
      "**/?(*.)(spec|test).(js|ts)?(x)"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.35",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-test-renderer": "^16.0.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "jest": "^22.1.4",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "rollup": "^0.55.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "typescript": "^2.6.2"
  }
}
